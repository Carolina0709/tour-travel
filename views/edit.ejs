<%- include("partials/header.ejs") %>
  <main class="ctn-main bg-black py-5 d-flex flex-column align-items-center">
    <h1 class="display-1 text-white">Edit Post</h1>
    <form action="/edit/<%= locals.key %>" method="POST" class="container w-100 pt-3" style="max-width: 750px;">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="cityName" name="cityName" value="<%= locals.city.name %>" required>
            <label for="cityName">City Name</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="subtitle" name="subtitle" value="<%= locals.city.subtitle %>" required>
            <label for="subtitle">Subtitle</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="author" name="author" value="<%= locals.city.author %>" required>
            <label for="author">Author</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="url" name="url" value="<%= locals.city.url %>" required>
            <label for="url">Url Image</label>
        </div>
        <fieldset class="border border-secondary bg-black rounded p-3 mb-3 text-white">
            <legend>Urls Gallery</legend>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="url1" name="url1" value="<%= locals.city.images[0] %>" required>
                <label for="url1">Image 1</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="url2" name="url2" value="<%= locals.city.images[1] %>" required>
                <label for="url2">Image 2</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="url3" name="url3" value="<%= locals.city.images[2] %>" required>
                <label for="url3">Image 3</label>
            </div>
         
        </fieldset>
         <div class="form-floating mb-3">
            <textarea class="form-control" id="content" style="height: 100px" name="content" required ><%= locals.city.content %></textarea>
            <label for="content">Write about your experience</label>
        </div>

        <div class="w-100 d-flex justify-content-end">
            <button type="submit" class="btn btn-danger">Submit</button>
        </div>
        
    </form>

  </main>
<%- include("partials/footer.ejs") %>