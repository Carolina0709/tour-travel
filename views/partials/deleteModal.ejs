<div class="modal fade " id="deleteModal-<%= key %>" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog ">
    <div class="modal-content text-bg-dark">
      <div class="modal-header">
        <h5 class="modal-title ">Are you sure you want to remove <%= city %>?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body d-flex justify-content-end gap-3">
        <form action="/delete/<%= key %>" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-danger">Remove</button>
        </form>
        <button type="button" class="btn btn-light " data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
